datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

// create a prisma model with the following fields: id, firstName, lastName, username, email, password, bio

model User {
  id        Int      @id @default(autoincrement()) 
  messages  Message[]
  firstName String
  lastName  String
  username  String   @unique
  email     String   @unique
  password  String
  bio       String?
  conversations Conversation[]
}


model Message {
  id             Int      @id @default(autoincrement())
  body           String
  senderId       Int      
  sender         User     @relation(fields: [senderId], references: [id])
  //conversation   Conversation     @relation(fields: [conversationId], references: [id])
  conversationId Int
  @@index([senderId], name: "sender")
  conversations Conversation[]
}

model Conversation {
  id            Int      @id @default(autoincrement())
  participants  User[]  
  messages      Message[]
}
